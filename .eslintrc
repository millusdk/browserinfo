{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "globals": {
        "document": false,
        "escape": false,
        "navigator": true,
        "unescape": false,
        "window": false,
        "describe": true,
        "before": true,
        "it": true,
        "expect": true,
        "sinon": true
    },
    "parser": "babel-eslint",
    "plugins": [],
    "rules": {
        "comma-dangle": ["warn", "always"],
        "indent": ["warn", 2],
        "linebreak-style": 0,
        "no-debugger": "warn",
        "quotes": [
            2,
            "double"
        ]
    }
}